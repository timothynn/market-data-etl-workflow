# n8n Configuration
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=changeme123

# Host Configuration
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678/

# Editor URL (change for production)
N8N_EDITOR_BASE_URL=http://localhost:5678

# Timezone (adjust to your location)
TIMEZONE=Africa/Nairobi

# PostgreSQL Configuration
POSTGRES_USER=n8n
POSTGRES_PASSWORD=n8n_secure_password
POSTGRES_DB=n8n

# Production Settings (uncomment for production)
# N8N_PROTOCOL=https
# N8N_HOST=your-domain.com
# WEBHOOK_URL=https://your-domain.com/
# N8N_EDITOR_BASE_URL=https://your-domain.com

# SSL Certificate paths (for HTTPS)
# N8N_SSL_KEY=/path/to/ssl/key.pem
# N8N_SSL_CERT=/path/to/ssl/cert.pem

# Redis (uncomment for queue mode)
# QUEUE_BULL_REDIS_HOST=redis
# QUEUE_BULL_REDIS_PORT=6379
# EXECUTIONS_MODE=queue

# Email Configuration (for notifications)
# N8N_EMAIL_MODE=smtp
# N8N_SMTP_HOST=smtp.gmail.com
# N8N_SMTP_PORT=587
# N8N_SMTP_USER=your-email@gmail.com
# N8N_SMTP_PASS=your-app-password
# N8N_SMTP_SENDER=your-email@gmail.com

# External Secrets (if using external vault)
# N8N_EXTERNAL_SECRETS_PROVIDER=vault
# N8N_EXTERNAL_SECRETS_UPDATE_INTERVAL=300
